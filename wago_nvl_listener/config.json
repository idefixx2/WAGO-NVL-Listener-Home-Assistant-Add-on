{
  "name": "WAGO NVL Listener",
  "version": "1.1.7",
  "slug": "wago_nvl_listener",
  "description": "Empf√§ngt CODESYS NVL-Telegramme (mehrere COB-IDs) und publiziert sie typisiert nach MQTT",
  "url": "https://github.com/idefixx2/WAGO-NVL-Listener-Home-Assistant-Add-on",
  "arch": ["amd64", "aarch64", "armv7", "armhf", "i386"],
  "startup": "services",
  "boot": "auto",
  "init": false,
  "map": ["config"],
  "options": {
    "mqtt_host": "core-mosquitto",
    "mqtt_port": 1883,
    "mqtt_user": "mqttuser",
    "mqtt_pass": "DEIN_PASSWORT",
    "mqtt_topic_base": "wago/nvl",
    "qos": 0,
    "retain": false,
    "on_change": true,
    "endianness": "little",
    "header_bytes": 16,
    "nvl_port": 1202,
    "cob_id_offset": 0,
    "cob_id_size": 2,
    "cob_id_byteorder": "little",
    "nvls_file": "/config/wago_nvl/nvls.json"
  },
  "schema": {
    "mqtt_host": "str",
    "mqtt_port": "int",
    "mqtt_user": "str",
    "mqtt_pass": "str",
    "mqtt_topic_base": "str",
    "qos": "int",
    "retain": "bool",
    "on_change": "bool",
    "endianness": "str",
    "header_bytes": "int",
    "nvl_port": "int",
    "cob_id_offset": "int",
    "cob_id_size": "int",
    "cob_id_byteorder": "str",
    "nvls_file": "str"
  },
  "ports": {
    "1202/udp": 1202
  }
}
